<!doctype html>
<html>
<head>
    <meta charset="UTF-8">
    <title>SMSBot-Currency Converter demo</title>
    <script src="js/newmain.js" type="text/javascript"></script>
    <script src="js/jquery-1.12.0.min.js"></script>
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="css/bootstrap-theme.min.css">
    <script src="js/bootstrap.min.js"></script>
    <link href='css/source_sans_pro.css' rel='stylesheet' type='text/css'>
    <link href='css/open_sans.css' rel='stylesheet' type='text/css'>
    <script src="jqCloud/dist/jqcloud.min.js"></script>
    <link rel="stylesheet" href="jqCloud/dist/jqcloud.min.css">
    <link rel="stylesheet" type="text/css" href="css/main.css"></style>
    <script type="text/javascript" src="js/async.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">

    <script type="text/javascript">
      function enableMMS(elm) {
        if (elm.value == "mms" || elm.value == "fax"){
          $('#mmsblock').show();
        } else {
          $('#mmsblock').hide();
        }
      }
    </script>
</head>
<body>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <a href="/" class="navbar-brand"><b>MESSAGING</b></a>
      </div>
      <ul class="nav navbar-nav">
        <li><a href="/">Subscription</a></li>
        <li><a href="/about">About</a></li>
        <!--li><a href="/login">Login</a></li-->
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li><a href="https://www.ringcentral.com" target="_blank">Powered by&nbsp;       <img alt="Brand" src="img/ringcentral.png" height="20"></a></li>
      </ul>
    </div>
  </nav>

  <section id='content'>
    <!-- Message form -->
    <div class="row">
      <div class="col-xs-12">
        <!--enctype="multipart/form-data"-->
        <form action="/sendmessage" method="POST" class="form-inline" enctype="multipart/form-data">
          <div class="form-group">
            <div class="form-line">
              <span class="msg-label">Message type</span>
              <select name="msgtype" required onchange="enableMMS(this)">
                <option value="sms" selected>SMS</option>
                <!--option value="pager">Pager</option-->
                <option value="mms">MMS</option>
                <option value="fax">Fax</option>
              </select>
            </div>
            <div class="form-line">
              <span class="msg-label">To number (n;n)</span>
              <input type="text" name="tonumber" autocomplete="tel" size="60"></input>
            </div>
            <div class="form-line">
              <span class="msg-label">Message body</span>
              <input type="text" name="message" size="60"></input>
            </div>
            <div class="form-line" id=mmsblock style="display:none">
              <span class="msg-label">Attachment</span>
              <input type="file" name="attachment" size="30"></input>
            </div>
            <div class="form-line">
              <button type="submit" class="btn btn-rc" id="call">Send</button>
            </div>
          </div>

        </form>
      </div>
    </div>
    <!-- / Message form -->

  </section>
</body>
</html>
